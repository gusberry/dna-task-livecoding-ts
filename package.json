{
  "name": "dna-task-livecoding-ts",
  "version": "1.0.0",
  "description": "DNA task live coding - Typescript (Node + Fastify)",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "export NODE_ENV=\"test\" && npm run build:ts && tsc -p test/tsconfig.json && tap -- --ts \"test/**/*.test.ts\" --no-coverage",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dna-technology/dna-task-livecoding-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dna-technology/dna-task-livecoding-ts/issues"
  },
  "homepage": "https://github.com/dna-technology/dna-task-livecoding-ts#readme",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/swagger": "^8.9.0",
    "@fastify/swagger-ui": "^1.9.3",
    "fastify": "^4.0.0",
    "fastify-cli": "^5.8.0",
    "fastify-plugin": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "typeorm-fastify-plugin": "^1.0.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/tap": "^15.0.5",
    "@types/uuid": "^9.0.3",
    "concurrently": "^7.0.0",
    "fastify-tsconfig": "^1.0.1",
    "tap": "^18.1.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
